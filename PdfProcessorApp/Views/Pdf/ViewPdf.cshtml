@{
    ViewData["Title"] = "View PDF";
}

<h2>View PDF</h2>

@if (!string.IsNullOrEmpty(ViewBag.PdfPath))
{
    <p>@ViewBag.Message</p>
    <p>
        <a href="@Url.Content(ViewBag.PdfPath)" target="_blank">Open PDF in new tab</a>
    </p>
    <hr />
    <h3>Embedded PDF Viewer:</h3>
    <embed src="@Url.Content(ViewBag.PdfPath)" type="application/pdf" width="100%" height="600px" />
    <hr />
    <iframe src="@Url.Content(ViewBag.PdfPath)" style="width:100%; height:600px;" frameborder="0"></iframe>
}
else
{
    <p>No PDF specified or an error occurred.</p>
}
<p><a asp-action="Index">Back to PDF Tools</a></p>